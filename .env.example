# =============================================================================
# CRM Platform - Root Environment Variables
# =============================================================================
# Copy this file to .env.secrets and fill in your values.
# Used by docker-compose.local.yml for local development.
# =============================================================================

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=local                    # local | development | production

# =============================================================================
# SHARED SECRETS (Critical - Must match across services!)
# =============================================================================
# Proxy secret for trusted communication between unified-ui and backend services
PROXY_SECRET=                        # Generate: openssl rand -hex 32

# Inter-service JWT token signing (for service-to-service authentication)
INTER_SERVICE_SECRET=                # Generate: openssl rand -hex 32

# Service API secret (for authenticating to security-service)
SERVICE_API_SECRET=                  # Generate: openssl rand -hex 32

# =============================================================================
# SERVICE URLS (Internal)
# =============================================================================
SALES_BOT_URL=http://localhost:8000
ASSET_MGMT_URL=http://localhost:8001
SECURITY_SERVICE_URL=http://localhost:8002

# =============================================================================
# SALES MODULE (Proposal Bot)
# =============================================================================
# Development Supabase (for data storage)
SALESBOT_DEV_SUPABASE_URL=https://your-dev-project.supabase.co
SALESBOT_DEV_SUPABASE_SERVICE_ROLE_KEY=your-dev-service-role-key

# Production Supabase (for data storage)
SALESBOT_PROD_SUPABASE_URL=https://your-prod-project.supabase.co
SALESBOT_PROD_SUPABASE_SERVICE_ROLE_KEY=your-prod-service-role-key

# UI JWT Secret (for validating tokens from unified-ui)
UI_JWT_SECRET=your-ui-jwt-secret

# API Keys
OPENAI_API_KEY=sk-your-openai-key
GOOGLE_API_KEY=your-google-api-key

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Dev Auth (for testing API via /docs)
DEV_AUTH_ENABLED=false
DEV_AUTH_TOKEN=dev-test-token
DEV_AUTH_USER_COMPANIES=["backlite_dubai"]

# =============================================================================
# UNIFIED UI
# =============================================================================
# Development Supabase (for authentication)
UI_DEV_SUPABASE_URL=https://your-ui-dev-project.supabase.co
UI_DEV_SUPABASE_ANON_KEY=your-ui-dev-anon-key
UI_DEV_SUPABASE_SERVICE_KEY=your-ui-dev-service-role-key

# Production Supabase (for authentication)
UI_PROD_SUPABASE_URL=https://your-ui-prod-project.supabase.co
UI_PROD_SUPABASE_ANON_KEY=your-ui-prod-anon-key
UI_PROD_SUPABASE_SERVICE_KEY=your-ui-prod-service-role-key

# =============================================================================
# ASSET MANAGEMENT
# =============================================================================
# Development Supabase (for asset data)
ASSETMGMT_DEV_SUPABASE_URL=https://your-asset-dev-project.supabase.co
ASSETMGMT_DEV_SUPABASE_SERVICE_KEY=your-asset-dev-service-role-key

# Production Supabase (for asset data)
ASSETMGMT_PROD_SUPABASE_URL=https://your-asset-prod-project.supabase.co
ASSETMGMT_PROD_SUPABASE_SERVICE_KEY=your-asset-prod-service-role-key

# =============================================================================
# SECURITY SERVICE
# =============================================================================
# Development Supabase (for audit logs, API keys, rate limits)
SECURITY_DEV_SUPABASE_URL=https://your-security-dev-project.supabase.co
SECURITY_DEV_SUPABASE_SERVICE_KEY=your-security-dev-service-role-key

# Production Supabase (for audit logs, API keys, rate limits)
SECURITY_PROD_SUPABASE_URL=https://your-security-prod-project.supabase.co
SECURITY_PROD_SUPABASE_SERVICE_KEY=your-security-prod-service-role-key

# =============================================================================
# PORTS (Optional - for custom port configuration)
# =============================================================================
# SALES_PORT=8000
# UI_PORT=3005
# ASSETS_PORT=8001
# SECURITY_PORT=8002

# =============================================================================
# DOCKER (Optional - for custom container names)
# =============================================================================
# SALES_CONTAINER_NAME=proposal-bot
# UI_CONTAINER_NAME=unified-ui
# ASSETS_CONTAINER_NAME=asset-management
# SECURITY_CONTAINER_NAME=security-service
# NETWORK_NAME=crm-network-local
