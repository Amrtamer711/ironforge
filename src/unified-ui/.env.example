# unified-ui Environment Configuration
# Copy this file to .env and fill in the values
#
# NOTE: unified-ui uses UI_* prefixed Supabase vars (separate from SALESBOT_*)

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
# ENVIRONMENT=production

# Port to run the server on (matches original Node.js server)
PORT=3005

# =============================================================================
# UI SUPABASE CONFIGURATION (unified-ui's own Supabase project)
# =============================================================================

# Development keys (used when ENVIRONMENT != 'production')
UI_DEV_SUPABASE_URL=https://your-ui-dev-project.supabase.co
UI_DEV_SUPABASE_ANON_KEY=eyJ...your-dev-anon-key
UI_DEV_SUPABASE_SERVICE_ROLE_KEY=eyJ...your-dev-service-key

# Production keys (used when ENVIRONMENT == 'production')
UI_PROD_SUPABASE_URL=https://your-ui-prod-project.supabase.co
UI_PROD_SUPABASE_ANON_KEY=eyJ...your-prod-anon-key
UI_PROD_SUPABASE_SERVICE_ROLE_KEY=eyJ...your-prod-service-key

# =============================================================================
# SALES BOT (PROPOSAL-BOT) CONFIGURATION
# =============================================================================
# URL where proposal-bot is running
# In Docker: http://proposal-bot:8000
# Local dev: http://localhost:8000
SALES_BOT_URL=http://localhost:8000

# Shared secret for proxy authentication
# Must match PROXY_SECRET in proposal-bot
PROXY_SECRET=your-secure-random-string

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins (in addition to auto-detected ones)
CORS_ORIGINS=https://your-domain.com,https://app.your-domain.com

# Auto-set by Render.com (if deployed there)
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# =============================================================================
# RBAC CACHE (OPTIONAL)
# =============================================================================
# Time-to-live for RBAC cache in seconds (default: 30)
RBAC_CACHE_TTL_SECONDS=30
